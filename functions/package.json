{
	"name": "backend",
	"version": "1.0.0",
	"description": "Backend for editing Google Sheets",
	"type": "commonjs",
	"scripts": {
		"build": "tsc",
		"predeploy": "tsc",
		"deploy": "firebase deploy --only functions",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write .",
		"start": "node functions/lib/index.js",
		"dev": "tsc && nodemon functions/lib/index.js",
		"emulate": "firebase emulators:start --only functions"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"firebase-admin": "^11.10.0",
		"firebase-functions": "^3.25.0",
		"googleapis": "^144.0.0",
		"zod": "^3.24.2",
		"@google-sheet-editor/shared": "*"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/node": "^22.13.1",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"@typescript-eslint/parser": "^7.8.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"prettier": "^3.2.5",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.5.4",
		"nodemon": "^3.1.4"
	}
}
