{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@/*": ["src/*"],
			"@shared/*": ["../shared/src/*"]  // ðŸ‘ˆ Add this to recognize `shared/`
		}
	},
	"include": ["src", "functions"],
	"exclude": ["node_modules"]
}
